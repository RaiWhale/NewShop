
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "login-validation" }))
{
    @Html.AntiForgeryToken()
    <div class="wrapper">

        <!-- Start page content -->
        <div id="page-content" class="page-wrapper">
            <!-- LOGIN SECTION START -->
            <div class="login-section mb-80">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <div class="registered-customers">
                                <h6 class="widget-title border-left mb-50">LOGIN CUSTOMERS</h6>

                                <div class="login-account p-30 box-shadow">
                                    <div class="row">
                                        <p>If you have an account with us, Please log in.</p>
                                        <form>
                                            <!--LoginName-->
                                            <div class="col-md-12">
                                                <input type="text" class="form-control" name="Email" id="Email" placeholder="Email" required />
                                            </div>

                                            <div class="col-md-12">
                                                <input type="password" class="form-control" name="Password" id="Password" placeholder="Password" autocomplete="off" required />
                                            </div>
                                            <div class="checkbox-primary pull-right">
                                                <label>
                                                    <input type="checkbox" id="loginCheckbox1" class="custom-checkbox">
                                                    Nhớ mật khẩu
                                                </label>
                                            </div>
                                            <p><strong><a href="@Url.Action("ForgotPassword", "Customer")">Quên mật khẩu?</a></strong></p>
                                            <button class="submit-btn-1 btn-hover-1 center-block" type="submit">Đăng nhập</button>
                                        </form>
                                        <p>@ViewBag.Message</p>
                                        <div class="form-group text-center">
                                            Need to Signup?
                                            <a href="@Url.Action("Register", "Customer")"><strong>Đăng ký ngay</strong></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- LOGIN SECTION END -->
        </div>
        <!-- End page content -->

    </div>
}