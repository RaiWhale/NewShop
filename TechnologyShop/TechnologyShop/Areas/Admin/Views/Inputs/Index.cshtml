@model IEnumerable<TechnologyShop.Models.Input>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create", null, new { baction = "", @class = "btn btn-info" })
    </p>
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Code
            </th>
            <th>
                Date
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Supplier.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th>
                Input User
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InputCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InputDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { baction = "" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { baction = "" }) 
            </td>
        </tr>
        }

    </table>
    </div>
<script src="~/Content/Admin/js/ajax.js"></script>