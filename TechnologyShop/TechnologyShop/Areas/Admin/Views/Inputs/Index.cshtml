@model IEnumerable<TechnologyShop.Models.Input>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create", null, new { baction = "", @class = "btn btn-info" })
    </p>
    <table class="table">
        <tr>
            <th>
                Code
            </th>
            <th>
                Date
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Tax)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Supplier.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th>
                Input User
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InputCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InputDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Tax)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.User.LoginName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    </div>
