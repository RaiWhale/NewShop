@model IEnumerable<TechnologyShop.Models.Product>
<p>
    @Html.ActionLink("Add Product", "Create", "Products", new { id = ViewBag.cat }, new { baction = "", @id = "addproduct", @class = "btn btn-info" })
</p>
<table class="table table-hover table-bordered">
    <tr>
        <th>#</th>
        <th>Product Name</th>
        <th>Category</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.ProductName</td>
            <td>@item.Category.CategoryName</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Products", new { id = item.Id }, new { baction = "" }) |
                @Html.ActionLink("Delete", "Delete", "Products", new { id = item.Id }, new { baction = "" })
            </td>
        </tr>
    }

</table>
